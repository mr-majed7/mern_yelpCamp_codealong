<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-lg">
            <div class="card shadow" style="width: 18rem;">
                <img src="https://images.unsplash.com/photo-1601134917279-ef70a0a90f18?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjV8fGNhbXBpbmd8ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=500&q=60"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title mb-3">Registration<h5>
                    <form action="/register" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label class="form-lable" for="username">Username</Uabel>
                            <input class="form-control" type="text" name="username" id="username" autofocus required>
                        </div>
                        <div class="mb-3">
                            <label class="form-lable" for="email">Email</label>
                            <input class="form-control" type="email" name="email" id="email" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-lable" for="password">Password</Pabel>
                            <input class="form-control" type="password" name="password" id="password" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success">Register</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>